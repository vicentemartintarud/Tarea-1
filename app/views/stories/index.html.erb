<% @stories.sort_by(&:created_at).reverse.first(10).each do |story| %>
<div class="row-md-2">
  <div class="col-xs-offset-1 col-md-4 col-md-4">
    <div class="thumbnail"style="height:600px; width:500px">
      <div class="caption">
        <h3><%=story.title%></h3>
        <h4><%=story.header%></h4>
        <% @lim_story = ''%>
        <%i = 0
          words = story.body.split
          while 1
            begin
              if @lim_story.length + words[i].length < 1000
                @lim_story += words[i] + ' '
                i += 1
              else
                @lim_story += '... '
                break
              end
            rescue
              break
            end
          end
        %>
        <p><%=@lim_story%></p>
        <div class="footer">
        <%=story.created_at.to_formatted_s(:db)%>
        <span style="padding-left:20px"></span>
        <span class="label label-default"><%=story.comments.count%></span>
        <span style="padding-right:20px"></span>
        <%=link_to 'Ver', story_comments_path(story), :class=>"btn btn-primary btn-sm", :style=>'color:white'%>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>


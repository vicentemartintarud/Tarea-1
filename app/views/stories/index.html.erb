<p id="notice"><%= notice %></p>

<div class="row-md-8">
  <div class="col-xs-offset-1 col-md-10 col-xs-offset-1">
    <h1>Noticias Recientes</h1>
    <br></br>
    <%=link_to 'Administración', stories_admin_path, :class=>"btn btn-info btn-sm", :style=>'color:white'%>
    <br></br>
  </div>
</div>

<% @stories.sort_by(&:created_at).reverse.first(10).each do |story| %>
  <div class="row-md-2">
    <div class="col-xs-offset-1 col-md-4 col-md-4">
      <div class="thumbnail"style="height:600px; width:500px">
        <div class="caption">
          <h3><%=story.title%></h3>
          <h4><%=story.header%></h4>

          <p><%=story.story_lim%></p>
          <div class="footer">
          <%=story.created_at.to_formatted_s(:db)%>
            <span style="padding-left:20px"></span>
            <span class="label label-default"><%=story.comments.count%></span>
            <span style="padding-right:20px"></span>
            <%=link_to 'Ver más', story_comments_path(story), :class=>"btn btn-primary btn-sm", :style=>'color:white'%>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
